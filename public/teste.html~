    </div>
    <script>
        // Corre√ß√£o no JavaScript para usar a nova classe do dot ativo
        let slideIndex = 0;
        const slides = document.querySelectorAll('.mySlides');
        const dots = document.querySelectorAll('.dot');
        const prev = document.querySelector('.prev');
        const next = document.querySelector('.next');
        let timeout;

        function showSlides() {
            slides.forEach(slide => slide.style.display = 'none');
            // Remove a classe 'active-dot' de todos os dots
            dots.forEach(dot => dot.classList.remove('active-dot'));

            slideIndex++;
            if (slideIndex > slides.length) {
                slideIndex = 1;
            }

            slides[slideIndex - 1].style.display = 'block';
            // Adiciona a classe 'active-dot' ao dot correto
            dots[slideIndex - 1].classList.add('active-dot');

            timeout = setTimeout(showSlides, 10000); // 10 segundos
        }

        function currentSlide(n) {
            clearTimeout(timeout);
            slideIndex = n;
            showSlides();
        }

        prev.addEventListener('click', () => {
            clearTimeout(timeout);
            // Ajusta o √≠ndice para voltar um slide e reinicia o loop
            slideIndex -= 2;
            if (slideIndex < 0) {
                slideIndex = slides.length - 1;
            }
            showSlides();
        });

        next.addEventListener('click', () => {
            clearTimeout(timeout);
            showSlides();
        });

        dots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
                // Ao clicar no dot, ajusta o √≠ndice para o slide correto (index + 1) e chama currentSlide
                currentSlide(index + 1);
            });
        });

        // Inicia o carrossel
        showSlides();
    </script>

